<div class="container">

  <div class="jumbotron"><h2>My order Details</h2><br>
    <h3>
      {{#if msg}}<div class="card bg-danger text-white"><div class="card-body">{{msg}}</div></div>{{/if}}
      {{#if success_msg}}<div class="card bg-success text-white"><div class="card-body">{{success_msg}}</div></div>{{/if}}
    </h3>
</div>


  <table class="table table-hover">
    <thead>
      <tr>
        <th>Imagename</th>
        <th>Product name</th>
        <th>Quantity</th>
        <th></th>
        <th>Total</th>

      </tr>
    </thead>
    <tbody>
      {{# each order}}
        <tr>
       <td><img src="/{{this.Imagename}}" width="50px" height="50px"></td>
       <td>{{this.pname}}</td>
       <td>{{this.quantity}}</td>
       <td></td>
       <td>{{this.price}}</td>
       {{/each}}
      </tr>

    </tbody>
  </table>
